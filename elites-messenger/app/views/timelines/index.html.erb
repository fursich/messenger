<div class = 'wrapper timeline_wrapper'>
    
    <div class = 'input'>
        <%= form_for @input_message do |f| %>
        <div class = 'form-group'>
            <%= f.label :message %> <br>
            <%= f.text_area :message, class: 'form-control', row: 3 %>
        </div>
        <div class = 'actions clearfix'>
            <% if flash[:alert] %>
                <div class='alert'>
                    <p class='alert'><%= flash[:alert] %></p>
                </div>
            <% end %>

            <div class='post'>
                <%= f.submit 'Post', class: 'btn btn-binary' %>
            </div>

        </div>
        <% end %>
    </div>

    <div class='timeline'>
        <% @timeline.each do |t| %>
            <div class="per <%= 'mine' if t.user.id==current_user.id%>" >
                <p class='icon'>
                    <% if t.user.thumbnail? %>
                        <%= image_tag t.user.thumbnail.url %>
                    <% else %>
                        NO IMAGE
                    <% end %>
                </p>
                <%= simple_format t.message, class: 'message' %>
                </p>
            </div>
        <% end %>
    </div>
    
    
</div>